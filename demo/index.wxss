/**index.wxss**/

.btn-group {
    display: flex;
    flex-wrap: wrap;
    padding: 10px;
}

.btn-group button{
    margin: 0 10px 10px 0;
}


.btn-group view.active {
    border-color: #08f;
    box-shadow: 0 0 0 1px #08f;
    color: #08f;
    position: relative;
}

.item {
    height: 360px;
    overflow: hidden;
    margin: 10px;
    outline: 2px dashed #ccc;
}

.item view {
    background: #08f;
    width: 100px;
    height: 100px;
    margin: 130px auto;
    line-height: 100px;
    text-align: center;
}
